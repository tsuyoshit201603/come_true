.header
  - if user_signed_in?
    .header__title
      = link_to business_users_path, class: "header__title" do
        Come_true
        = fa_icon "child"
    .header__make
      = link_to new_idea_path, class: "reset__a" do
        作成する
    .header__mypage
      = link_to root_path, class: "reset__a" do
        マイページ
    .header__signout
      = link_to destroy_user_session_path, method: :delete, class: "reset__a" do
        サインアウト
  - elsif business_user_signed_in?
    .header__title
      = link_to ideas_path, class: "header__title" do
        Come_true
        = fa_icon "child"
    .header__make
    .header__mypage
      = link_to root_path, class: "reset__a" do
        マイページ
    .header__signout
      = link_to destroy_business_user_session_path, method: :delete, class: "reset__a" do
        サインアウト
  - else
    .header__title
      = link_to root_path, class: "header__title" do
        Come_true
        = fa_icon "child"